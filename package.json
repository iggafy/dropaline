{
  "name": "dropaline",
  "version": "1.0.3",
  "description": "The physical internet for writers and readers.",
  "homepage": ".",
  "main": "electron/main.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder build --publish never",
    "electron:build:linux": "npm run build && electron-builder build --linux --publish never",
    "electron:build:mac": "npm run build && electron-builder build --mac --publish never",
    "electron:build:win": "npm run build && electron-builder build --win --publish never",
    "electron:publish": "npm run build && electron-builder build --publish always"
  },
  "build": {
    "extends": null,
    "appId": "com.dropaline.app",
    "productName": "Drop a Line",
    "executableName": "dropaline",
    "publish": [
      {
        "provider": "github",
        "owner": "iggafy",
        "repo": "dropaline"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "electron/**/*",
      "package.json"
    ],
    "linux": {
      "maintainer": "Drop a Line Team <hello@dropaline.com>",
      "icon": "electron/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    },
    "mac": {
      "icon": "electron/icon.png",
      "target": "dmg",
      "identity": null,
      "category": "public.app-category.productivity"
    }
  },
  "keywords": [],
  "author": "Drop a Line Team <hello@dropaline.com>",
  "license": "ISC",
  "dependencies": {
    "@supabase/supabase-js": "^2.38.4",
    "@tiptap/extension-bubble-menu": "^2.1.13",
    "@tiptap/extension-image": "^2.1.13",
    "@tiptap/extension-placeholder": "^2.1.13",
    "@tiptap/extension-text-align": "^2.27.2",
    "@tiptap/extension-underline": "^2.1.13",
    "@tiptap/pm": "^2.1.13",
    "@tiptap/react": "^2.1.13",
    "@tiptap/starter-kit": "^2.1.13",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "web-vitals": "^2.1.4",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^39.2.7",
    "electron-builder": "^24.13.3",
    "typescript": "^4.9.5",
    "wait-on": "^7.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "overrides": {
    "nth-check": "^2.0.1",
    "postcss": "^8.4.31"
  }
}